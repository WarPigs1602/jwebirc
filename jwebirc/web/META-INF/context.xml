       <Parameter name="jwebirc.chatnappingDefaultChannel" value="#lobby" override="false" />
       <Parameter name="jwebirc.showStackTrace" value="true" override="false" />
       <Parameter name="jwebirc.errorPageStyle" value="detailed" override="false" />
    
    <!-- Resource Configuration -->
    <!-- Uncomment and configure for database connection pooling
    <Resource name="jdbc/jwebircDB" 
              auth="Container"
              type="javax.sql.DataSource"
              maxTotal="20" 
              maxIdle="10"
              maxWaitMillis="10000"
              username="dbuser" 
              password="dbpass"
              driverClassName="org.postgresql.Driver"
              url="jdbc:postgresql://localhost:5432/jwebirc"
              validationQuery="SELECT 1"
              testOnBorrow="true"/>
    -->
    
    <!-- Security Configuration -->
    <Valve className="org.apache.catalina.valves.RemoteAddrValve"
           allow=".*" />
    
    <!-- Access Log Configuration -->
    <Valve className="org.apache.catalina.valves.AccessLogValve"
           directory="logs"
           prefix="jwebirc_access_log"
           suffix=".txt"
           pattern="%h %l %u %t &quot;%r&quot; %s %b %D"
           resolveHosts="false" />
           
</Context>
